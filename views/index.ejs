<!-- Hero Section -->
<section class="bg-light py-5">
  <div class="container d-flex justify-content-center">
    <div class="card shadow-sm p-4 p-md-5 text-center" style="max-width: 600px; width: 100%;">
      <h1 class="display-4 fw-bold mb-3">Making Tax Digital, Simplified</h1>
      <p class="lead mb-2">
        Keep using your spreadsheets while staying fully compliant with HMRC.
      </p>
      <p class="lead mb-4">
        Automatically submit rental income and expenses directly to HMRC: securely, accurately, and effortlessly.
      </p>

      <!-- Template Download Section -->
      <p class="mb-2"><strong>Step 1:</strong> Download your free Google Sheets template.</p>
      <a href="https://docs.google.com/spreadsheets/d/1HjKBLZndbdkQPqtxTSDBCrQAUtp9uL1cJDvFUwVGvjg/copy" target="_blank">
        <button class="btn btn-success btn-lg mb-1">
          ðŸ“¥ Download Free Google Sheets Template
        </button>
      </a>
      <p class="text-muted small mb-4">Click the button to create your own copy in Google Sheets.</p>

      <!-- NINO validation message -->
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger error-message"><%= error %></div>
      <% } %>

      <!-- Continue form -->
      <form action="/nino" method="POST" class="d-flex justify-content-center gap-2 flex-wrap">
      <input 
        type="text" 
        name="nino" 
        id="nino" 
        placeholder="National Insurance Number" 
        class="form-control" 
        required 
        style="max-width: 250px; border: 2px solid #333; border-radius: 6px;">
          <button type="submit" class="btn btn-primary btn-lg">Sign in with HMRC</button>
      </form>

      <!-- Login Information / Reassurance -->
      <p class="text-muted small mb-0">
        After you click "Continue", you'll be redirected to HMRC to log in and grant permission. <br>
        We do not store any personal information or HMRC login details, and your data remains secure.
      </p>
    </div>
  </div>
</section>
