<h1>Pre-submission Checks</h1>
<p>Please confirm the following checks before continuing.</p>

<ul class="list-group mb-4">
  <li class="list-group-item">
    <%= itsaStatus ? '✅' : '❌' %> Registered for Making Tax Digital
  </li>
  <li class="list-group-item">
    <%= propertyRegistered ? '✅' : '❌' %> UK Property Registered
  </li>
</ul>

<h2 class="mb-4">Your HMRC Property Income Obligations</h2>

<!-- Table -->
<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Period Start</th>
      <th>Period End</th>
      <th>Due Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody id="obligationsTableBody"></tbody>
</table>

<!-- Embed obligations data from backend -->
<script id="obligations-data" type="application/json">
  <%- JSON.stringify(obligationsData) %>
</script>

<h2 class="mb-4">Your cumulative income and expenses summary</h2>

<div class="card mb-3">
  <div class="card-header bg-dark text-white">
    <div class="d-flex flex-column">
      <span class="fw-bold">UK Property Summary</span>
      <small class="text-light opacity-75">
        From: <%= cumulativeData.fromDate %> &nbsp;|&nbsp;
        To: <%= cumulativeData.toDate %> &nbsp;|&nbsp;
        Submitted: <%= cumulativeData.submittedOn %>
      </small>
    </div>
  </div>
  <div class="card-body">
    
    <h5 class="mb-3">Income</h5>
    <ul class="list-group mb-4">
      <% if (cumulativeData.ukProperty.income.periodAmount) { %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Total rents</span>
          <span>£<%= cumulativeData.ukProperty.income.periodAmount %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.income.otherIncome) { %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Other income</span>
          <span>£<%= cumulativeData.ukProperty.income.otherIncome %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.income.rentARoom.rentsReceived) { %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Rent a room</span>
          <span>£<%= cumulativeData.ukProperty.income.rentARoom.rentsReceived %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.income.taxDeducted) { %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Tax deducted</span>
          <span>£<%= cumulativeData.ukProperty.income.taxDeducted %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.income.premiumsOfLeaseGrant) { %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Premiums for the grant of a lease</span>
          <span>£<%= cumulativeData.ukProperty.income.premiumsOfLeaseGrant %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.income.reversePremiums) { %>
        <li class="list-group-item d-flex justify-content-between">
          <span>Reverse premiums and inducements</span>
          <span>£<%= cumulativeData.ukProperty.income.reversePremiums %></span>
        </li>
      <% } %>
    </ul>
    
    <h5 class="mb-3">Expenses</h5>
    <ul class="list-group">
      <% if (cumulativeData.ukProperty.expenses.premisesRunningCosts) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Rent, rates, insurance and ground rents</span>
          <span>£<%= cumulativeData.ukProperty.expenses.premisesRunningCosts %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.repairsAndMaintenance) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Property repairs and maintenance</span>
          <span>£<%= cumulativeData.ukProperty.expenses.repairsAndMaintenance %></span>
        </li>
      <% } %>   
      <% if (cumulativeData.ukProperty.expenses.financialCosts) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Non-residential property finance costs</span>
          <span>£<%= cumulativeData.ukProperty.expenses.financialCosts %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.professionalFees) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Legal, management and other professional fees</span>
          <span>£<%= cumulativeData.ukProperty.expenses.professionalFees %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.costOfServices) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Costs of services provided, including wages</span>
          <span>£<%= cumulativeData.ukProperty.expenses.costOfServices %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.other) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Other allowable property expenses</span>
          <span>£<%= cumulativeData.ukProperty.expenses.other %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.travelCosts) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Travel costs</span>
          <span>£<%= cumulativeData.ukProperty.expenses.travelCosts %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.rentARoom.amountClaimed) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Rent a Room exempt amount</span>
          <span>£<%= cumulativeData.ukProperty.expenses.rentARoom.amountClaimed %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.residentialFinancialCost) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Residential property finance costs</span>
          <span>£<%= cumulativeData.ukProperty.expenses.residentialFinancialCost %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.residentialFinancialCostsCarriedForward) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Unused residential property finance costs brought forward</span>
          <span>£<%= cumulativeData.ukProperty.expenses.residentialFinancialCostsCarriedForward %></span>
        </li>
      <% } %>
      <% if (cumulativeData.ukProperty.expenses.consolidatedExpenses) { %>
          <li class="list-group-item d-flex justify-content-between">
          <span>Consolidated expenses</span>
          <span>£<%= cumulativeData.ukProperty.expenses.consolidatedExpenses %></span>
        </li>
      <% } %>
    </ul>
  </div>
</div>

<!-- Embed cumulative summary data from backend -->
<script id="cumulative-data" type="application/json">
  <%- JSON.stringify(cumulativeData) %>
</script>

<button class="btn btn-primary btn-lg w-100">Continue</button>

<div class="row">

  <!-- Income Panel -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-dark text-white">
        Upload Property Income
      </div>
      <div class="card-body">
        <div class="mb-3">
          <label for="incomeCsvFile" class="form-label">Upload Transactions CSV</label>
          <input class="form-control" type="file" id="incomeCsvFile" accept=".csv">
        </div>
        <button id="uploadIncomeBtn" class="btn btn-primary">Upload CSV</button>

        <div id="incomeUploadStatus" class="mt-3"></div>
        <div id="incomeCsvPreview" class="mt-3"></div>
      </div>
    </div>
  </div>

  <!-- Expenses Panel -->
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-dark text-white">
        Upload Property Expenses
      </div>
      <div class="card-body">
        <div class="mb-3">
          <label for="expensesCsvFile" class="form-label">Upload Transactions CSV</label>
          <input class="form-control" type="file" id="expensesCsvFile" accept=".csv">
        </div>
        <button id="uploadExpensesBtn" class="btn btn-primary">Upload CSV</button>

        <div id="expensesUploadStatus" class="mt-3"></div>
        <div id="expensesCsvPreview" class="mt-3"></div>
      </div>
    </div>
  </div>
</div>

<script src="dashboardPage.js"></script>