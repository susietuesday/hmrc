<div class="row justify-content-center">
  <div class="col-lg-8">
    <h2 class="mb-4">Your HMRC Property Income Obligations</h2>

    <!-- Obligations -->
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Period Start</th>
          <th>Period End</th>
          <th>Due Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody id="obligationsTableBody"></tbody>
    </table>

    <!-- Embed obligations data from backend -->
    <script id="obligations-data" type="application/json">
      <%- JSON.stringify(obligationsData) %>
    </script>

    <h2 class="mb-4">Your cumulative UK property quarterly update summary</h2>

    <button id="fetchCumulativeSummaryBtn" class="btn btn-primary mb-3">
      Fetch Cumulative Summary
    </button>

    <!-- Message placeholder -->
    <div id="cumulativeSummaryMessage" class="alert alert-info d-none"></div>

    <!-- Cumulative summary container, hidden initially -->
    <div id="cumulativeSummaryContainer" class="card mb-3 d-none">
      <div class="card-header bg-dark text-white">
        <div class="d-flex flex-column">
          <span class="fw-bold">UK Property Summary</span>
          <small id="summaryDates" class="text-light opacity-75"></small>
        </div>
      </div>
      <div class="card-body">
        <h5 class="mb-3">Income</h5>
        <ul id="incomeList" class="list-group mb-4"></ul>

        <h5 class="mb-3">Expenses</h5>
        <ul id="expensesList" class="list-group"></ul>
      </div>
    </div>

    <!-- Quarterly Update Panel -->
    <div class="card mt-4">
      <div class="card-header bg-dark text-white">Upload Quarterly Update</div>
      <div class="card-body">
        <div class="mb-3">
            <input class="form-control" type="file" id="csvFile" accept=".csv">
            <div id="errorMessages" style="color: red;"></div>
        </div>
        <button id="uploadBtn" class="btn btn-primary" disabled>Upload CSV</button>

        <div id="uploadStatus" class="mt-3"></div>
        <div id="csvPreview" class="mt-3"></div>

        <div class="alert alert-info mt-3" role="alert">
          <h5 class="alert-heading mb-2">Submit an interim update</h5>
          <p class="mb-2">
            Choose an <strong>Update to</strong> date. Your totals should include all transactions up to that date.
          </p>
      </div>

      <label for="toDate" class="form-label">Update to (inclusive)</label>
      <input
        type="date"
        id="toDate"
        name="toDate"
        class="form-control"
        min="<%= fromDate %>"
        max="<%= defaultToDate %>"
        value="<%= new Date().toISOString().split('T')[0] %>" />
      <p class="text-secondary mt-1">
        Your update will cover <strong><%= fromDate %></strong> to
        <strong id="toDateLabel"><%= toDate %></strong>.
      </p>

      <form action="/summary" method="POST" class="mt-3">
        <button type="submit" class="btn btn-primary btn-lg w-100">
          Submit summary
        </button>
      </form>
      </div>
    </div>

    <a href="/income" class="btn btn-primary btn-lg w-100">Continue</a>
  </div>
</div>

<script>
  const toDateInput = document.getElementById('toDate');
  const lbl = document.getElementById('toDateLabel');
  toDateInput.addEventListener('input', () => lbl.textContent = toDateInput.value);
</script>

<script type="module" src="dashboardPage.js"></script>