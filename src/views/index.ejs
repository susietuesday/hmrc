<!-- Hero Section -->
<section class="bg-light py-5">
  <div class="container d-flex justify-content-center">
    <div class="card shadow-sm p-4 p-md-5 text-center" style="max-width: 1000px; width: 100%;">
      <h1 class="display-4 fw-bold mb-3">Making Tax Digital, for Landlords</h1>
      <p class="lead mb-2">
        Keep control of your accounts using spreadsheets while staying fully compliant with HMRC.
      </p>
      <p class="lead mb-4">
        Send your UK property quarterly updates directly to HMRC: securely, accurately, and effortlessly.
      </p>

      <!-- Template Download Section -->
      <p class="mb-2"><strong>Step 1:</strong> Download your free Google Sheets template and start tracking your property income and expenses.</p>
      <a href="<%= process.env.GOOGLE_SHEETS_TEMPLATE_URL %>" target="_blank">
        <button class="btn btn-success btn-lg mb-1">
          ðŸ“¥ Download Free Google Sheets Template
        </button>
      </a>
      <p class="text-muted small mb-4">Click the button to create your own copy in Google Sheets.</p>

      <!-- NINO validation message -->
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger error-message"><%= error %></div>
      <% } %>

      <!-- Continue form -->
      <p class="mb-2"><strong>Step 2:</strong> Log in securely via HMRC to view your tax obligations and send your quarterly updates.</p>
      <form action="/nino" method="POST" class="d-flex justify-content-center gap-2 flex-wrap">
      <input 
        type="text" 
        name="nino" 
        id="nino" 
        placeholder="National Insurance Number" 
        class="form-control" 
        required 
        style="max-width: 250px; border: 2px solid #333; border-radius: 6px;">
          <button type="submit" class="btn btn-primary btn-lg">Sign in with HMRC</button>
      </form>

      <!-- Login Information / Reassurance -->
      <p class="text-muted small mb-0">
        After you click "Continue", you'll be redirected to HMRC to log in and grant permission. <br>
        We do not store any personal information or HMRC login details, and your data remains secure.
      </p>
    </div>
  </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-white">
  <div class="container text-center">
    <h2 class="fw-bold mb-4">How It Works</h2>
    <h4 class="text-muted mb-5">
      Send your quarterly updates for UK property income in 3 simple steps.
    </h4>    
    <div class="row g-4">
      <!-- Step 1 -->
      <div class="col-md-4">
        <div class="card h-100 shadow-sm p-4">
          <div class="display-4 text-primary mb-3">1</div>
          <h4 class="fw-bold">Download the Template</h4>
          <p class="text-muted">Use our free Google Sheets template to track your income and expenses easily.</p>
        </div>
      </div>
      
      <!-- Step 2 -->
      <div class="col-md-4">
        <div class="card h-100 shadow-sm p-4">
          <div class="display-4 text-primary mb-3">2</div>
          <h4 class="fw-bold">Connect to HMRC</h4>
          <p class="text-muted">Sign in securely with your HMRC credentials. We never store your login details.</p>
        </div>
      </div>
      
      <!-- Step 3 -->
      <div class="col-md-4">
        <div class="card h-100 shadow-sm p-4">
          <div class="display-4 text-primary mb-3">3</div>
          <h4 class="fw-bold">Send Your Quarterly Update</h4>
          <p class="text-muted">Upload your spreadsheet, review your data, and send directly to HMRC in minutes.</p>
        </div>
      </div>
    </div>
  </div>
</section>
